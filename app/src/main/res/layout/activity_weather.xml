<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#102d6c"
    tools:context="com.idpz.instacity.Home.WeatherActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imgMainCityBack"

            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>
<ProgressBar
    android:id="@+id/progressBar"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:layout_width="50dp"
    android:layout_height="50dp" />
    <RelativeLayout
        android:id="@+id/relTopWeather"
        android:background="@drawable/backwhiteround"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imgVSRetry"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_refresh"
        android:visibility="gone"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <ImageView
        android:id="@+id/imgWeather"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/hoshdar"
        android:src="@drawable/sunny" />

        <com.idpz.instacity.utils.CustomTextView
            android:id="@+id/city_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="18sp"
            android:text="شهر"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            />

        <com.idpz.instacity.utils.CustomTextView
            android:visibility="visible"
            android:id="@+id/updated_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:text="@string/receiving_forecast"
            android:textSize="14sp" />



        <com.idpz.instacity.utils.CustomTextView
        android:id="@+id/details_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/current_temperature_field"
        android:layout_centerHorizontal="true"
        android:textColor="@color/darkblue"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />
        <TextView
            android:id="@+id/humidity_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgHumidty"
            android:layout_toEndOf="@+id/imgHumidty"
            android:text="35%"
            android:textColor="@color/white"
            android:visibility="visible" />


    <TextView
        android:id="@+id/max_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"
        android:text=""
        android:textColor="@color/white"
        android:visibility="visible" />

    <TextView
        android:id="@+id/min_field"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/max_field"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text=""
        />
    <com.idpz.instacity.utils.CustomTextView
        android:id="@+id/txtWeatherSummary"
        android:layout_below="@id/imgWind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/current_temperature_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:text="34°"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <ImageView
        android:id="@+id/imgHumidty"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="75dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="90dp"
        android:contentDescription="@string/hoshdar"
        android:src="@drawable/humidity"
        android:visibility="visible" />

        <ImageView
            android:id="@+id/imgWind"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="90dp"
            android:contentDescription="@string/hoshdar"
            android:src="@drawable/windw" />

    <TextView
        android:id="@+id/speed_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgHumidty"
        android:layout_toEndOf="@+id/imgWind"
        android:text="10km"
        android:textColor="@color/white" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lvForecastWeather"
        android:layout_marginTop="350dp"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </ListView>
</RelativeLayout>
