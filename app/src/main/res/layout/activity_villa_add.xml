<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.idpz.instacity.Like.AddArtActivity">
    <ImageView
        android:src="@drawable/bbb"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:id="@+id/lin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="65"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgVillaSave"
                android:layout_width="100dp"
                android:layout_height="100dp"

                />
            <Button
                android:id="@+id/btnVillaImgSelect"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/backblueround"
                android:textColor="@color/white"
                android:text="انتخاب عکس"
                />
            <TextView
                android:id="@+id/villaCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=""
                />
            <TextView
                android:id="@+id/txtHoshdar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/hoshdar"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="35"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:text=""
                    android:hint=""
                    android:ems="8"
                    android:textColor="@color/white"
                    android:id="@+id/txtVillaName"
                    android:layout_weight="1" />

                <TextView
                    android:text="نام محل"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvJob1"
                    android:textColor="@color/white"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:text=""
                    android:hint="مثال: روستای، محله "
                    android:ems="10"
                    android:textColor="@color/white"
                    android:id="@+id/txtVillaArea"
                    android:layout_weight="1" />

                <TextView
                    android:text="منطقه"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvJob22"
                    android:textColor="@color/white"
                    android:layout_weight="1" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:text=""
                    android:hint=""
                    android:textColor="@color/white"
                    android:ems="10"
                    android:id="@+id/txtVillaPrice"
                    android:layout_weight="1" />

                <TextView
                    android:text="قیمت تومان"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvJob21"
                    android:textColor="@color/white"
                    android:layout_weight="1" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:text=""
                    android:hint=""
                    android:textColor="@color/white"
                    android:ems="10"
                    android:id="@+id/txtVillaAddress"
                    android:layout_weight="1" />

                <TextView
                    android:text="آدرس"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvJob2"
                    android:textColor="@color/white"
                    android:layout_weight="1" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:text=""
                    android:hint=""
                    android:textColor="@color/white"
                    android:ems="10"
                    android:id="@+id/txtVillaRoom"
                    android:layout_weight="1" />

                <TextView
                    android:text="اتاقها"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvJob27"
                    android:textColor="@color/white"
                    android:layout_weight="1" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:text=""
                    android:hint=""
                    android:ems="10"
                    android:textColor="@color/white"
                    android:id="@+id/txtVillaFacility"
                    android:layout_weight="1" />

                <TextView
                    android:text="امکانات"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvJob28"
                    android:textColor="@color/white"
                    android:layout_weight="1" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:text=""
                    android:hint=""
                    android:ems="10"
                    android:textColor="@color/white"
                    android:id="@+id/txtVillaTel"
                    android:layout_weight="1" />

                <TextView
                    android:text="تلفن"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvJob29"
                    android:textColor="@color/white"
                    android:layout_weight="1" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:text=""
                    android:hint=""
                    android:ems="10"
                    android:textColor="@color/white"
                    android:id="@+id/txtVillaMemo"
                    android:layout_weight="1" />

                <TextView
                    android:text="توضیحات"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvJob39"
                    android:textColor="@color/white"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ln2"
        android:layout_below="@id/lin1"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnVillaEdit"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/backblueround"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="ویرایش"
            android:enabled="false"
            />

        <Button
            android:id="@+id/btnVillaSend"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:background="@drawable/backblueround"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text=" ثبت جدید"
            />

    </LinearLayout>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_below="@id/ln2"
        android:layout_centerHorizontal="true"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_marginTop="5dp"
        android:id="@+id/addVillasRefresh"
        android:layout_below="@id/ln2"
        android:layout_alignParentBottom="true"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lvAddVillasContent">

        </ListView>
    </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>
