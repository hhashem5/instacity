<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/relLayoutSmartVillage"
        android:layout_alignParentTop="true"
        android:layout_weight="50"
        android:layout_margin="2dp"
        android:layout_width="wrap_content"
        android:background="@drawable/top1"
        android:layout_height="90dp">

        <com.idpz.instacity.utils.CustomTextView
            android:id="@+id/txtSmViPanel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:text="دهکده هوشمند"
            android:textColor="@color/white"
            android:textSize="16sp" />
        <com.idpz.instacity.utils.CustomTextView
            android:id="@+id/txtSmVi2Panel"
            android:text="با بیان ایده ها و مشکلات و راه کارها در مدیریت شهر مشارکت کنید"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

     <!--137 and weather-->
    <LinearLayout
        android:id="@id/line1"
        android:layout_below="@id/relLayoutSmartVillage"
        android:weightSum="100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relLayout2"
            android:layout_margin="2dp"
            android:layout_weight="50"
            android:background="@drawable/backblueround"
            android:layout_width="0dp"
            android:layout_height="90dp">

            <com.idpz.instacity.utils.CustomTextView
                android:id="@+id/txtNewsPanel"
                android:text="اخبار محلی"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.idpz.instacity.utils.CustomTextView
                android:id="@+id/txtNews2Panel"
                android:text="از خبرهای محل زندگی مطلع شوید"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_below="@id/imgNewsPanel"
                android:layout_alignParentEnd="true"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/imgNewsPanel"
                android:src="@drawable/localnews"
                android:layout_width="80dp"
                android:layout_height="60dp" />

        </RelativeLayout>

        <!--weather-->


        <RelativeLayout
            android:id="@+id/relLayoutWeather"
            android:layout_margin="2dp"
            android:background="@drawable/backcyanround"
            android:layout_weight="50"
            android:layout_width="0dp"
            android:layout_height="90dp">

            <com.idpz.instacity.utils.CustomTextView

                android:text="آب و هوا"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.idpz.instacity.utils.CustomTextView

                android:text="پیش بینی هوای 7 روز آینده"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView

                android:src="@drawable/imcloudy"
                android:layout_width="80dp"
                android:layout_height="60dp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line0"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="73dp"
        android:orientation="horizontal"

        android:background="@drawable/grey_border_bottom"
        android:gravity="center"
        >
        <com.nightonke.boommenu.BoomMenuButton
            android:id="@+id/bmb"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="2dp"
            app:bmb_buttonEnum="simpleCircle"
            app:bmb_piecePlaceEnum="piecePlace_dot_6_1"
            app:bmb_buttonPlaceEnum="buttonPlace_sc_6_3"

            />
        <ImageButton
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:id="@+id/btnChangCity"
            android:src="@drawable/citychange"

            android:layout_margin="2dp"
            />
        <ImageButton
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:id="@+id/btnHandyCarft"
            android:src="@drawable/handycraft"

            android:layout_margin="2dp"
            />

        <ImageButton
            android:id="@+id/btnTourism"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="fitXY"
            android:src="@drawable/tourism"
            android:background="@null"
            android:layout_margin="2dp"
            />

        <ImageButton
            android:id="@+id/btnCars"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="fitXY"
            android:src="@drawable/cars"
            android:background="@null"
            android:layout_margin="2dp"
            />

    </LinearLayout>

    <!--car and sth-->
    <LinearLayout
        android:id="@id/line2"
        android:layout_below="@id/line1"
        android:weightSum="100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relLayout1"
            android:layout_margin="2dp"
            android:background="@drawable/backcyanround"
            android:layout_weight="50"
            android:layout_width="wrap_content"
            android:layout_height="90dp">

            <com.idpz.instacity.utils.CustomTextView
                android:id="@+id/txtAdsPanel"
                android:text="نیازمندیها"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.idpz.instacity.utils.CustomTextView
                android:id="@+id/txtWeather2Panel"
                android:text="کالا یا خدمات خود را بیابید"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_below="@id/imgAds"
                android:layout_alignParentEnd="true"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/imgAds"
                android:src="@drawable/localads"
                android:layout_width="80dp"
                android:layout_height="60dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relLayoutCar"
            android:layout_alignParentEnd="true"
            android:layout_weight="50"
            android:layout_margin="2dp"
            android:layout_width="wrap_content"
            android:background="@drawable/backredround"
            android:layout_height="90dp">

            <com.idpz.instacity.utils.CustomTextView
                android:id="@+id/txtCarPanel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:text="خودروهای هوشمند"
                android:textColor="@color/white"
                android:textSize="16sp" />
            <com.idpz.instacity.utils.CustomTextView
                android:id="@+id/txtCar2Panel"
                android:text="خودروها را در نقشه ببینید"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_below="@id/imgCarPanel"
                android:layout_alignParentEnd="true"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/imgCarPanel"
                android:src="@drawable/smartcars"
                android:layout_width="80dp"
                android:layout_height="60dp" />

        </RelativeLayout>


    </LinearLayout>

    <!--social 137-->
    <RelativeLayout
        android:id="@+id/relLayoutSocial"
        android:layout_below="@id/line2"
        android:layout_weight="50"
        android:layout_margin="2dp"
        android:layout_width="wrap_content"
        android:background="@drawable/backbbluround"
        android:layout_height="90dp">
        <ImageView
            android:id="@+id/imgSocial2Panel"
            android:src="@drawable/man137"
            android:layout_alignParentStart="true"
            android:layout_marginStart="50dp"
            android:layout_width="90dp"
            android:layout_height="80dp" />
        <com.idpz.instacity.utils.CustomTextView
            android:id="@+id/txtSocialPanel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="پیام شهروندی(137)"
            android:textColor="@color/white"
            android:textSize="16sp" />
        <com.idpz.instacity.utils.CustomTextView
            android:id="@+id/txtSocial2Panel"
            android:text="با بیان ایده ها و مشکلات و راه کارها در مدیریت شهر مشارکت کنید"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_below="@id/imgSocialPanel"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/imgSocialPanel"
            android:src="@drawable/sad"
            android:layout_width="80dp"
            android:layout_height="60dp" />




    </RelativeLayout>


    <LinearLayout
        android:id="@id/line4"
        android:layout_below="@id/relLayoutSocial"
        android:weightSum="100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@id/line5"
            android:layout_below="@id/line4"
            android:orientation="vertical"
            android:layout_weight="60"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/relLayoutShop"
                android:layout_margin="2dp"
                android:background="@drawable/backcyanround"
                android:layout_weight="50"
                android:layout_width="wrap_content"
                android:layout_height="90dp">

                <com.idpz.instacity.utils.CustomTextView
                    android:id="@+id/txtShopPanel"
                    android:text="کسب و کار"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.idpz.instacity.utils.CustomTextView
                    android:id="@+id/txtShop2Panel"
                    android:text="اطلاعات فروشگاه و خدمات"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_below="@id/imgShop"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/imgShop"
                    android:src="@drawable/localplaces"
                    android:layout_width="80dp"
                    android:layout_height="60dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relLayoutHandy"
                android:layout_alignParentEnd="true"
                android:layout_weight="50"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:background="@drawable/backredround"
                android:layout_height="90dp">

                <com.idpz.instacity.utils.CustomTextView
                    android:id="@+id/txtHandyPanel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:text="صنایع دستی"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
                <com.idpz.instacity.utils.CustomTextView
                    android:id="@+id/txtHandy2Panel"
                    android:text="خودروها را در نقشه ببینید"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_below="@id/imgHandyPanel"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/imgHandyPanel"
                    android:src="@drawable/pottery"
                    android:layout_width="80dp"
                    android:layout_height="60dp" />

            </RelativeLayout>




        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relLayoutTor"
            android:layout_alignParentEnd="true"
            android:layout_weight="40"
            android:layout_margin="2dp"
            android:layout_width="wrap_content"
            android:background="@drawable/backredround"
            android:layout_height="180dp">

            <com.idpz.instacity.utils.CustomTextView
                android:id="@+id/txtTourPanel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:text="گردشگری"
                android:textColor="@color/white"
                android:textSize="16sp" />
            <com.idpz.instacity.utils.CustomTextView
                android:id="@+id/txtTour2Panel"
                android:text="خودروها را در نقشه ببینید"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/imgTourPanel"
                android:src="@drawable/ic_camera"
                android:layout_width="120dp"
                android:layout_height="100dp" />

        </RelativeLayout>




    </LinearLayout>

    <LinearLayout
        android:id="@id/line6"
        android:layout_below="@id/line4"
        android:weightSum="100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/relLayoutEvent"
            android:layout_alignParentEnd="true"
            android:layout_weight="40"
            android:layout_margin="2dp"
            android:layout_width="wrap_content"
            android:background="@drawable/stage"
            android:layout_height="180dp">

            <com.idpz.instacity.utils.CustomTextView
                android:id="@+id/txtEventPanel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:text="رویداد"
                android:textColor="@color/white"
                android:textSize="16sp" />
            <com.idpz.instacity.utils.CustomTextView
                android:id="@+id/txtEvent2Panel"
                android:text="مسابقات ، همایشها، کنسرتها و سایر رویدادها"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <!--<ImageView-->
                <!--android:id="@+id/imgEventPanel"-->
                <!--android:src="@drawable/stage"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content" />-->

        </RelativeLayout>

        <LinearLayout
            android:id="@id/line5"
            android:layout_below="@id/line4"
            android:orientation="vertical"
            android:layout_weight="60"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/relLayoutMedia"
                android:layout_margin="2dp"
                android:background="@drawable/backcyanround"
                android:layout_weight="50"
                android:layout_width="wrap_content"
                android:layout_height="90dp">

                <com.idpz.instacity.utils.CustomTextView
                    android:id="@+id/txtMediaPanel"
                    android:text="رسانه"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.idpz.instacity.utils.CustomTextView
                    android:id="@+id/txtMedia2Panel"
                    android:text="فیلم آموزشی و فرهنگی"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/imgMedia"
                    android:src="@drawable/media"
                    android:layout_width="80dp"
                    android:layout_height="60dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relLayoutJob"
                android:layout_alignParentEnd="true"
                android:layout_weight="50"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:background="@drawable/backredround"
                android:layout_height="90dp">

                <com.idpz.instacity.utils.CustomTextView
                    android:id="@+id/txtJobPanel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:text="کاریابی "
                    android:textColor="@color/white"
                    android:textSize="16sp" />
                <com.idpz.instacity.utils.CustomTextView
                    android:id="@+id/txtJob2Panel"
                    android:text="آگهی کاربدید یا نیروی کارپیداکنید"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_below="@id/imgJobPanel"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/imgJobPanel"
                    android:src="@drawable/myprofile"
                    android:layout_width="80dp"
                    android:layout_height="60dp" />

            </RelativeLayout>




        </LinearLayout>


    </LinearLayout>


    <!--no internet error-->
<RelativeLayout
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progressFirst"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="72dp"
        android:layout_height="72dp" />

    <ImageView
        android:id="@+id/imgErrorConnect"
        android:layout_below="@id/progressFirst"
        android:layout_centerHorizontal="true"
        android:layout_width="72dp"
        android:src="@drawable/ic_connect_error"
        android:visibility="visible"
        android:layout_height="72dp" />
    <ImageView
        android:id="@+id/imgVRetry"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_refresh"
        android:visibility="visible"
        android:layout_width="72dp"
        android:layout_height="72dp" />


</RelativeLayout>

</RelativeLayout>