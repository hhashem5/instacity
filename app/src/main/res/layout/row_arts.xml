<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/white_trans_border_bottom"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="40dp"
            android:orientation="vertical"
            android:layout_height="80dp">
        <ImageView
            android:id="@+id/imgDelArt"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_edit"
            />
        <ImageView
            android:id="@+id/imgEditArt"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_del"
            /></LinearLayout>
        <ImageView
            android:id="@+id/imgAds"
            android:layout_width="80dp"
            android:layout_height="80dp"

            />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right"
            >

            <TextView
                android:id="@+id/textAdsTitle"
                android:text="دوخت انواع لباس محلی"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textAdsMemo"
                android:text="سفارشات انواع لباس های آذری ، نیشابوری و دوخت از روی مدل های آماده با پارچه های با کیفیت ارسال به تمام نقاط ایران پذیرفته میشود"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:gravity="right">



    </LinearLayout>

</LinearLayout>