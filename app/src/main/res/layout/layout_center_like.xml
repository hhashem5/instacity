<merge xmlns:tools="http://schemas.android.com/tools"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">



        <!-- ********************Middle Section*************************** -->

        <RelativeLayout
            android:id="@+id/relLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relLayout1"
            android:background="@color/white">



            <LinearLayout
                android:id="@+id/linLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/white_grey_border_bottom"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_weight="70"
                    >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_photoLikes"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/user"
                        android:layout_gravity="center"
                        android:layout_centerVertical="true"
                        app:civ_border_color="@color/black"
                        app:civ_border_width="0.5dp"/>
                    <TextView
                        android:id="@+id/txtDisplay_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="نام"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                android:id="@+id/linLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linLayout"
                android:orientation="vertical"
                android:padding="20dp"
                    android:layout_weight="30"
                >



                <TextView
                    android:id="@+id/txtDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="شماره ملی:"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/txtMyMobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="شماره موبایل:"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="نصب برنامه = 100 امتیاز"
                        android:textColor="@color/link_blue"
                        android:textSize="16sp"
                        />
                <TextView
                    android:id="@+id/txtMyScore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="امتیاز شما="
                    android:textColor="@color/link_blue"
                    android:textSize="16sp"
                    />


            </LinearLayout>

            </LinearLayout>
<LinearLayout
    android:id="@+id/linPlaces"
    android:layout_width="match_parent"
    android:layout_below="@id/linLayout"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <com.idpz.instacity.utils.CustomTextView
        android:gravity="center"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="اسپانسرهای جوایز"
        android:textColor="@color/link_blue"
        android:textSize="16sp"
        />
    <ListView
        android:layout_width="match_parent"
        android:id="@+id/listPlaces"
        android:layout_height="match_parent">

    </ListView>
</LinearLayout>
</RelativeLayout>
    </RelativeLayout>

</merge>























