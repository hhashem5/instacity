<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_job_reg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MapCity.StoreRegActivity">

    <com.idpz.instacity.utils.CustomTextView
        android:text="کسب و کار خود را در کشور معرفی کنید (هزینه 5000 تومان)"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:hint="نام واحد صنفی "
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_weight="1"
            android:id="@+id/txtShopName"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/line2"
        android:layout_below="@id/line1"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:hint="نام و نام خانوادگی مالک"
            android:ems="10"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:id="@+id/txtShopOwnerName"
            android:layout_weight="1" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/line3"
        android:layout_below="@id/line2"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text=""
            android:hint="تلفن ثابت"
            android:ems="10"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:id="@+id/txtShopTel"
            android:layout_weight="1" />



    </LinearLayout>
    <LinearLayout
        android:id="@+id/line4"
        android:layout_below="@id/line3"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="09"
            android:hint="@string/field_phone_number"
            android:gravity="left"
            android:ems="10"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:id="@+id/txtShopMobile"
            android:layout_weight="1" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/line5"
        android:layout_below="@id/line4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:hint="آدرس"
            android:ems="10"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:id="@+id/txtShopAddress"
            android:layout_weight="1" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/line6"
        android:layout_below="@id/line5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:hint="نام کالا: کلمات راهنمای جستجو"
            android:ems="10"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:id="@+id/txtShopKey"
            android:layout_weight="1" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/line7"
        android:background="@drawable/white_trans_light_bottom"
        android:layout_below="@id/line6"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="5dp"
        android:orientation="horizontal">
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:entries="@array/Store_tag"
            android:id="@+id/spnShopTag"

            android:layout_weight="1" />

        <com.idpz.instacity.utils.CustomTextView
            android:text="نوع مکان"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvJob8"
            android:layout_marginRight="20dp"
            android:textColor="@color/black"
            android:layout_weight="1" />

    </LinearLayout>
    <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:orientation="horizontal">-->
        <!--<EditText-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:inputType="textPersonName"-->
            <!--android:text=""-->
            <!--android:hint=""-->
            <!--android:ems="10"-->
            <!--android:id="@+id/txtShopMemo"-->
            <!--android:layout_weight="1" />-->

        <!--<TextView-->
            <!--android:text="توضیحات"-->
            <!--android:layout_width="80dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/tvJob3"-->
            <!--android:layout_weight="1" />-->

    <!--</LinearLayout>-->


    <Button
        android:text="تایید"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtJobStatus"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:background="@drawable/back_btn"

        android:id="@+id/btnShopReg" />

    <com.idpz.instacity.utils.CustomTextView
        android:id="@+id/txtHoshdar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnShopReg"
        android:gravity="center"
        android:text="@string/hoshdar"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/txtJobStatus"
        android:layout_below="@id/line7"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content" />


    <ImageView
        android:id="@+id/imgShop"
        android:layout_marginTop="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/noimage"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/storeCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text=""
        />
    <Button
        android:id="@+id/btnShopPic"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/imgShop"
        android:textColor="@color/white"
        android:background="@drawable/backblueround"
        android:text="انتخاب عکس " />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_below="@id/btnShopReg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <ListView
        android:id="@+id/lvMyShops"
        android:layout_below="@id/txtHoshdar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>
    <fragment
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:id="@+id/shop_fragment"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:visibility="gone"
        android:layout_alignParentTop="true" />
    <Button
        android:id="@+id/btnFinalShop"
        android:text="تایید مکان فروشگاه و پرداخت"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:visibility="gone"
        android:padding="5dp"
        android:layout_below="@id/shop_fragment"
        android:background="@drawable/backblueround"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/imgRetry"
        android:src="@drawable/ic_refresh"
        android:layout_below="@id/btnShopReg"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_marginTop="40dp"
        android:layout_width="40dp"
        android:layout_height="40dp" />
</RelativeLayout>
