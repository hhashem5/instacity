<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="50dp"
    android:orientation="vertical">
    <RelativeLayout
        android:background="@drawable/backcyanround"
        android:layout_width="match_parent"
        android:gravity="end"
        android:layout_height="wrap_content">
    <AutoCompleteTextView
        android:id="@+id/acTxtView"
        android:hint="@string/search"
        android:layout_gravity="end"
        android:gravity="center|start"
        android:textSize="16sp"
        android:layout_marginEnd="5dp"
        android:layout_width="200dp"
        android:layout_height="40dp" />

        <com.idpz.instacity.utils.CustomTextView
            android:id="@+id/txtSearchResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/acTxtView"
            android:text="@string/result" />
</RelativeLayout>
    <Button
        android:id="@+id/btnMapStoreReg"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back_btn"
        android:text="ثبت فروشگاه" />
<ListView
    android:id="@+id/lvShops"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

</ListView>




