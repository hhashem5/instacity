<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/white_trans_border_bottom"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="40dp"
            android:orientation="vertical"
            android:layout_height="80dp">
            <ImageView
                android:id="@+id/imgDelShop"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_edit"
                />
            <ImageView
                android:id="@+id/imgEditShop"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_del"
                /></LinearLayout>
    <ImageView
        android:id="@+id/imgShop"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ishop"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="right"
        >

        <TextView
            android:id="@+id/textShopName"
            android:text="نام فروشگاه: نیک نام"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textShopOwner"
            android:text="نام مالک: محمدی علی زاده"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textShopTell"
            android:text="تماس : شماره ثابت و همراه"
            android:layout_width="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/textShopKey"
            android:text="کلید واژه های فروشگاه"
            android:layout_width="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:layout_height="wrap_content" />
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="right">


            <TextView
                android:id="@+id/textShopAddress"
                android:text="آدرس: آدرس فروشگاه"
                android:layout_width="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>