<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bbb"
    tools:context="com.idpz.instacity.Travel.AddArtActivity">


    <LinearLayout
        android:id="@+id/ln1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="65"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgArtSave"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                />
            <Button
                android:id="@+id/btnArtImgSelect"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/backblueround"
                android:textColor="@color/white"
                android:text="انتخاب عکس"
                />
            <TextView
                android:id="@+id/artCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=""
                />
            <TextView
                android:id="@+id/txtHoshdar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/hoshdar"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="35"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:text=""
                    android:textColor="@color/white"
                    android:hint=""
                    android:ems="8"
                    android:id="@+id/txtArtName"
                    android:layout_weight="1" />

                <TextView
                    android:text="نام محصول"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvJob1"
                    android:textColor="@color/white"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:text=""
                    android:hint="مثال: خانگی"
                    android:ems="10"
                    android:textColor="@color/white"
                    android:id="@+id/txtArtType"
                    android:layout_weight="1" />

                <TextView
                    android:text="نوع"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:id="@+id/tvJob22"
                    android:layout_weight="1" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:text=""
                    android:hint=""
                    android:textColor="@color/white"
                    android:ems="10"
                    android:id="@+id/txtArtWeight"
                    android:layout_weight="1" />

                <TextView
                    android:text="وزن"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:id="@+id/tvJob21"
                    android:layout_weight="1" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:text=""
                    android:hint=""
                    android:textColor="@color/white"
                    android:ems="10"
                    android:id="@+id/txtArtAddress"
                    android:layout_weight="1" />

                <TextView
                    android:text="آدرس"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvJob2"
                    android:textColor="@color/white"
                    android:layout_weight="1" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:text=""
                    android:hint=""
                    android:textColor="@color/white"
                    android:ems="10"
                    android:id="@+id/txtArtMat"
                    android:layout_weight="1" />

                <TextView
                    android:text="جنس"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvJob27"
                    android:textColor="@color/white"
                    android:layout_weight="1" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:text=""
                    android:hint=""
                    android:ems="10"
                    android:textColor="@color/white"
                    android:id="@+id/txtArtColor"
                    android:layout_weight="1" />

                <TextView
                    android:text="رنگ"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvJob28"
                    android:textColor="@color/white"
                    android:layout_weight="1" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:text=""
                    android:hint=""
                    android:ems="10"
                    android:textColor="@color/white"
                    android:id="@+id/txtArtPrice"
                    android:layout_weight="1" />

                <TextView
                    android:text="قیمت"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvJob29"
                    android:textColor="@color/white"
                    android:layout_weight="1" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ln2"
        android:layout_below="@id/ln1"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnArtEdit"
            android:layout_gravity="center"
            android:background="@drawable/backblueround"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="ویرایش"
            android:textColor="@color/white"
            android:enabled="false"
            />

        <Button
            android:id="@+id/btnArtSend"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/backblueround"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text=" ثبت جدید"
            />

    </LinearLayout>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_below="@id/ln2"
        android:layout_centerHorizontal="true"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_marginTop="5dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/ln2"
        android:id="@+id/addArtsRefresh"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lvArtsContent">

        </ListView>
    </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>
